#include <stdio.h>

int main() {
    int block[] = {300,600,350,200,750,125};
    int process[] = {115,500,358,200,375};
    int nb = 6, np = 5;

    int allocation[np];
    for(int i=0;i<np;i++) allocation[i] = -1;

    for(int i=0;i<np;i++){
        for(int j=0;j<nb;j++){
            if(block[j] >= process[i]){
                allocation[i] = j;
                block[j] -= process[i];
                break;
            }
        }
    }

    printf("Process\tSize\tBlock\n");
    for(int i=0;i<np;i++){
        if(allocation[i] != -1)
            printf("P%d\t%d\tB%d\n", i+1, process[i], allocation[i]+1);
        else
            printf("P%d\t%d\tNot Allocated\n", i+1, process[i]);
    }

    return 0;
}
