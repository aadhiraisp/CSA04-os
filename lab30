#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;
    char buffer[50];

    // ---------- OPEN FILE ----------
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);
    if (fd < 0) {
        printf("Cannot open file.\n");
        return 1;
    }

    // ---------- FCNTL: CHANGE FILE PERMISSIONS ----------
    fcntl(fd, F_SETFL, O_RDWR);

    // Write data
    write(fd, "UNIX I/O System Calls", 22);

    // ---------- LSEEK ----------
    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, 22);
    buffer[22] = '\0';
    printf("Data read after lseek(): %s\n", buffer);

    // ---------- STAT: FILE INFORMATION ----------
    stat("sample.txt", &fileStat);
    printf("File size: %ld bytes\n", fileStat.st_size);
    printf("Number of links: %ld\n", fileStat.st_nlink);

    close(fd);

    // ---------- OPENDIR & READDIR ----------
    dir = opendir(".");
    if (dir == NULL) {
        printf("Cannot open current directory.\n");
        return 1;
    }

    printf("\nFiles in current directory:\n");
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dir);
    return 0;
}
