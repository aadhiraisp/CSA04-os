#include <stdio.h>

int main() {
    int n, next[50], start;

    printf("Enter number of blocks: ");
    scanf("%d", &n);

    printf("Enter starting block: ");
    scanf("%d", &start);

    printf("Enter next block for each block (-1 for end):\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &next[i]);

    printf("\nLinked Allocation Chain:\n");
    int current = start;
    while (current != -1) {
        printf("%d -> ", current);
        current = next[current];
    }
    printf("END\n");

    return 0;
}
