// file: dining_philosophers.c
#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

#define N 5
#define ROUNDS 3

pthread_mutex_t forks[N];
sem_t waiter;

void *philosopher(void *arg) {
    int id = *(int*)arg;
    int left = id;
    int right = (id + 1) % N;
    for (int r = 0; r < ROUNDS; ++r) {
        // Thinking
        printf("Philosopher %d is thinking (round %d)\n", id, r+1);
        usleep(100000 + (rand()%200000)); // random think

        sem_wait(&waiter); // request permission to try to pick forks
        // pick forks
        pthread_mutex_lock(&forks[left]);
        pthread_mutex_lock(&forks[right]);

        // Eating
        printf("Philosopher %d is eating (round %d)\n", id, r+1);
        usleep(100000 + (rand()%200000)); // random eat

        // put down forks
        pthread_mutex_unlock(&forks[right]);
        pthread_mutex_unlock(&forks[left]);
        sem_post(&waiter);
    }
    printf("Philosopher %d finished.\n", id);
    return NULL;
}

int main(void) {
    pthread_t tid[N];
    int ids[N];

    srand((unsigned)time(NULL));
    sem_init(&waiter, 0, N-1); // allow at most N-1 philosophers to pick forks

    for (int i = 0; i < N; ++i) pthread_mutex_init(&forks[i], NULL);
    for (int i = 0; i < N; ++i) {
        ids[i] = i;
        pthread_create(&tid[i], NULL, philosopher, &ids[i]);
    }
    for (int i = 0; i < N; ++i) pthread_join(tid[i], NULL);

    for (int i = 0; i < N; ++i) pthread_mutex_destroy(&forks[i]);
    sem_destroy(&waiter);
    return 0;
}
