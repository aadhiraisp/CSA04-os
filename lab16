#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char writeData[] = "Hello, UNIX System Calls!";
    char readBuffer[50];

    // Create or open file
    fd = open("testfile.txt", O_CREAT | O_RDWR, 0644);
    if (fd < 0) {
        printf("Error opening file!\n");
        return 1;
    }
    printf("File opened successfully.\n");

    // Write data to file
    write(fd, writeData, sizeof(writeData));
    printf("Data written to file.\n");

    // Move file offset to beginning
    lseek(fd, 0, SEEK_SET);

    // Read data from file
    read(fd, readBuffer, sizeof(writeData));
    printf("Data read from file: %s\n", readBuffer);

    // Close file
    close(fd);
    printf("File closed.\n");

    return 0;
}

