#include <stdio.h>

int main() {
    int n, tq;
    printf("Enter number of processes: ");
    scanf("%d",&n);

    int bt[n], rt[n], wt[n], tat[n], time = 0;
    
    printf("Enter burst times:\n");
    for(int i=0;i<n;i++){
        scanf("%d",&bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d",&tq);

    int completed = 0;

    while(completed < n) {
        for(int i=0;i<n;i++){
            if(rt[i] > 0) {
                int exec = (rt[i] > tq) ? tq : rt[i];
                rt[i] -= exec;
                time += exec;

                if(rt[i] == 0) {
                    completed++;
                    tat[i] = time;
                    wt[i] = tat[i] - bt[i];
                }
            }
        }
    }

    printf("\nP\tBT\tWT\tTAT\n");
    for(int i=0;i<n;i++)
        printf("P%d\t%d\t%d\t%d\n",i+1,bt[i],wt[i],tat[i]);

    return 0;
}
